<html lang="de" xmlns="http://www.w3.org/1999/xhtml" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd" xmlns:p="tapestry:parameter">
	<t:content>
		<t:zone t:id="searchTimerListZone" id="searchTimerListZone">
			<t:grid source="searchTimers" row="searchTimer" model="searchTimerModel">
				<p:activeCell>
					<t:eventlink t:event="toggleSearchTimerActive" t:context="${searchTimer.get('id')}">
						<t:TimerActive value="isActive()" recording="false" text="true" />
					</t:eventlink>
				</p:activeCell>

				<p:nameCell>
					${searchTimer.get('name')}
				</p:nameCell>

				<p:timerActionCell>
					${timerAction}
				</p:timerActionCell>

				<p:channelsCell>
					<t:loop source="channels" value="currentChannel">
						<t:ChannelImage channelName="${currentChannel}" />
					</t:loop>
				</p:channelsCell>

				<p:channelFormatCell>
					${searchTimer.get('chformat')}
				</p:channelFormatCell>

				<p:searchText1Cell>
					${searchTimer.get('expression')}
				</p:searchText1Cell>

				<p:searchText2Cell>
					${searchTimer.get('expression1')}
				</p:searchText2Cell>

				<p:directoryCell>
					${searchTimer.get('directory')}
				</p:directoryCell>

				<p:actionCell>
					<t:eventlink t:event="executeSearchTimer" t:context="${searchTimer.get('id')}" zone="^">
						<img src="${asset:search.svg}" alt="Suchtimer ausführen" class="searchicon" title="Suchtimer ausführen" />
					</t:eventlink>
					&nbsp;
					<t:eventlink t:event="editSearchTimer" t:context="${searchTimer.get('id')}" zone="^">
						<img src="${asset:edit.svg}" alt="Suchtimer bearbeiten" class="editicon" title="Suchtimer bearbeiten" />
					</t:eventlink>
					&nbsp;
					<t:eventlink t:event="deleteSearchTimer" t:context="${searchTimer.get('id')}">
						<img src="${asset:delete.svg}" alt="Suchtimer löschen" class="deleteicon" title="Suchttimer löschen"/>
					</t:eventlink>
				</p:actionCell>
			</t:grid>
			
			<t:eventlink t:event="newSearchTimer" t:context="${searchTimer.get('id')}" zone="^">
				<img src="${asset:new.svg}" alt="Neuen Suchtimer erstellen" class="newicon" title="neuen Suchtimer erstellen" />
				Neuen Suchtimer erstellen
			</t:eventlink>
			
		</t:zone>
	</t:content>
</html>